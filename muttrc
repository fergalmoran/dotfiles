set ssl_starttls=yes
set ssl_force_tls=yes

set imap_user = "fergalm@fergl.ie"
set imap_pass = "F8r3Knuts"
set folder = imap://mail.fergl.ie/
set spoolfile = imap://mail.fergl.ie/INBOX

# SMTP user auth
# # fill in the right user and pass based on your setup
# # protocols: smtp for TLS (25/587), smtps for SSL (465)
set smtp_url = "smtp://$imap_user@mail.fergl.ie:587"
set smtp_pass = "$imap_pass"

# Where to save copies of outgoing mail
set record = '+Sent'

# keybindings
bind index G imap-fetch-mail
